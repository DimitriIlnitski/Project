<div class="card-panel">
  <span class="blue-text text-darken-2">Додати товар</span>
</div>
<div class="row">
  <form class="col s12" action="postProduct" method="post">
    <div class="row">
      <div class="input-field col s10">
        <input name="name" id="name" type="text" class="validate" autocomplete="off">
        <label class="active" for="name">Name</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s10">
        <input name="volume" id="volume" type="text" class="validate" autocomplete="off">
        <label class="active" for="volume">Volume</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s10">
        <input name="material" id="material" type="text" class="validate" autocomplete="off">
        <label class="active" for="material">Material</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s10">
        <input name="price" id="price" type="text" class="validate" autocomplete="off">
        <label class="active" for="price">Price</label>
      </div>
    </div>
    <div class="row">
      <button class="btn waves-effect waves-light" type="submit" name="action">Створити
      </button>
    </div>
  </form>
</div>