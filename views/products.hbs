  {{#each products}}
  <div class="row">
    <div class="col s12 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">{{this.name}}</span>
          <p>Об'єм:     {{this.volume}}</p>
          <p>Матеріал:  {{this.material}}</p>
          <p>Ціна, грн: {{this.price}}</p>
        </div>
        <div class="card-action">
          <div class="row">
            <div class="col s12 m6">
          <form action="editProduct" method="post">
                  <button class="btn waves-effect waves-light" type="submit" name="action">Редагувати</button>
          </form>
          </div>
          <div class="col s12 m6">
          <form  action="removeProduct" method="post">
               <button class="btn waves-effect waves-light" type="submit" name="action">Видалити</button>
          </form>
          </div>
          </div>
        </div>
      </div>
    </div>
  </div>  
  {{/each}}
    
    